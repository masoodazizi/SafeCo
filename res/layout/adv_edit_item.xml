<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/border"
    android:columnCount="4"
    android:rowCount="4" >

    <TextView
        android:id="@+id/lbl_advedit_time"
        android:layout_width="50dp"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="0"
        android:text="Time:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txt_advedit_time"
        android:layout_width="150dp"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_row="0"
        android:text="Time info not loaded"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/lbl_advedit_location"
        android:layout_width="50dp"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="1"
        android:text="Location:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txt_advedit_location"
        android:layout_width="150dp"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="1"
        android:text="Location info not loaded"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/lbl_advedit_couser"
        android:layout_width="50dp"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="2"
        android:text="Co-User:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txt_advedit_couser"
        android:layout_width="150dp"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="2"
        android:text="User info not loaded"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/lbl_advedit_viuser"
        android:layout_width="50dp"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="3"
        android:text="View-User:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txt_advedit_viuser"
        android:layout_width="150dp"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="3"
        android:text="User info not loaded"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/txt_advedit_privacyprofile"
        android:layout_width="50dp"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="Normal"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/lbl_advedit_privacyid"
        android:layout_column="2"
        android:layout_gravity="right"
        android:layout_row="1"
        android:text="Id: "
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/lbl_advedit_privacytime"
        android:layout_column="2"
        android:layout_gravity="right"
        android:layout_row="2"
        android:text="Time: "
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/lbl_advedit_privacyloc"
        android:layout_column="2"
        android:layout_gravity="right"
        android:layout_row="3"
        android:text="Location: "
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
	<TextView
        android:id="@+id/txt_advedit_privacyid"
        android:layout_column="3"
        android:layout_gravity="left"
        android:layout_row="1"
        android:text="low"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/txt_advedit_privacytime"
        android:layout_column="3"
        android:layout_gravity="left"
        android:layout_row="2"
        android:text="low"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/txt_advedit_privacyloc"
        android:layout_column="3"
        android:layout_gravity="left"
        android:layout_row="3"
        android:text="low"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</GridLayout>