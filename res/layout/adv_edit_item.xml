<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:background="@drawable/border" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
	    <TextView
	        android:id="@+id/lbl_advedit_time"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:text="Time:"
	        android:textColor="@color/DarkBlue"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	
	    <TextView
	        android:id="@+id/txt_advedit_time"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="2dp"
	        android:layout_marginLeft="2dp"
	        android:layout_weight="1.2"
	        android:gravity="center"
	        android:text="Time info not loaded"
	        android:textColor="@color/Black"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	    
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:orientation="horizontal" >
	    
		   <TextView
		       android:id="@+id/lbl_advedit_privacytime"
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:gravity="end"
		       android:layout_weight="0.9"
		       android:text="Time: "
		       android:textAppearance="?android:attr/textAppearanceSmall" />
		    
		    <TextView
		        android:id="@+id/txt_advedit_privacytime"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1.2"
		        android:text="low"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

	    </LinearLayout>
    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
	    <TextView
	        android:id="@+id/lbl_advedit_location"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:text="Location:"
	        android:textColor="@color/DarkBlue"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	
	    <TextView
	        android:id="@+id/txt_advedit_location"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="2dp"
	        android:layout_marginLeft="2dp"
	        android:layout_weight="1.2"
	        android:gravity="center"
	        android:text="Location info not loaded"
	        android:textColor="@color/Black"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	    
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:orientation="horizontal" >
	    
		    <TextView
		        android:id="@+id/lbl_advedit_privacyloc"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.9"
		        android:gravity="end"
		        android:text="Locn: "
		        android:textAppearance="?android:attr/textAppearanceSmall" />
		    
		    <TextView
		        android:id="@+id/txt_advedit_privacyloc"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1.2"
		        android:text="low"
		        android:textAppearance="?android:attr/textAppearanceSmall" />

	    </LinearLayout>
	    
	</LinearLayout>
	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    
	    <TextView
	        android:id="@+id/lbl_advedit_couser"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
	        android:layout_weight="2"
	        android:text="Co-User:"
	        android:textColor="@color/DarkBlue"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	
	    <TextView
	        android:id="@+id/txt_advedit_couser"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="2dp"
	        android:layout_marginRight="2dp"
	        android:layout_weight="1.2"
	        android:gravity="center"
	        android:text="User info not loaded"
	        android:textColor="@color/Black"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:orientation="horizontal" >
	    
		    <TextView
		        android:id="@+id/lbl_advedit_privacyid"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.9"
		        android:gravity="end"
		        android:text="Iden: "
		        android:textAppearance="?android:attr/textAppearanceSmall" />
		    
			<TextView
			    android:id="@+id/txt_advedit_privacyid"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1.2"
			    android:text="low"
			    android:textAppearance="?android:attr/textAppearanceSmall" />

		</LinearLayout>
	    	    
	</LinearLayout>
	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    
	    <TextView
	        android:id="@+id/lbl_advedit_viuser"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:text="View-User:"
	        android:textColor="@color/DarkBlue"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	
	    <TextView
	        android:id="@+id/txt_advedit_viuser"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="2dp"
	        android:layout_marginRight="2dp"
	        android:layout_weight="1.2"
	        android:gravity="center"
	        android:text="User info not loaded"
	        android:textColor="@color/Black"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	    	    
        <TextView
            android:id="@+id/txt_advedit_privacyprofile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.8"
            android:text="Normal"
            android:textAppearance="?android:attr/textAppearanceSmall" />

			    
	</LinearLayout>
	
</LinearLayout>