<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/border" >

    <ImageView
        android:src="@drawable/party"
        android:id="@+id/img_userphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_username_home"
        android:layout_margin="10dp" />
    
    <TextView
        android:id="@+id/txt_username_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:text="No Username"
        android:textAppearance="?android:attr/textAppearanceSmall" />    
    

    <TextView
        android:id="@+id/txt_status_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:layout_alignTop="@+id/txt_username_home"
        android:layout_toRightOf="@+id/img_userphoto"
        android:layout_alignParentRight="true"
        android:text="No Status..."
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/lbl_with_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_status_home"
        android:layout_below="@+id/txt_status_home"
        android:layout_marginRight="5dp"
        android:text="With:"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/txt_with_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lbl_with_home"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txt_status_home"
        android:text="No Friends Tag"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/lbl_time_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_status_home"
        android:layout_below="@+id/lbl_with_home"
        android:layout_marginRight="5dp"
        android:text="Time:"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/txt_time_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lbl_time_home"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txt_with_home"
        android:text="No Time Tag"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/lbl_loc_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_status_home"
        android:layout_below="@+id/lbl_time_home"
        android:layout_marginRight="5dp"
        android:text="Place:"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/txt_loc_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lbl_loc_home"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txt_time_home"
        android:text="No Location Tag"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>
