<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/fragment_advmain"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    tools:context="com.parse.f8.view.SettingAdvMain" >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:layout_margin="5dp"
	    android:background="@color/background_color"
	    android:orientation="vertical" >
	    
        <RelativeLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content" >
    	    
    	    <ImageView
    	        android:id="@+id/image_advmain_help"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_weight="0.05"
                android:layout_marginLeft="4dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/help_icon"/>
    	    
    	    <View
    	        android:layout_width="1dp"
    	        android:layout_height="35dp"
    	        android:layout_centerVertical="true"
    	        android:layout_marginLeft="5dp"
    	        android:layout_toRightOf="@+id/image_advmain_help"
    	        android:background="@color/White"
    	        android:padding="2dp" />

    	    <TextView
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_centerHorizontal="true"
    	        android:layout_centerVertical="true"
    	        android:gravity="center_horizontal"
    	        android:text="@string/restricted_list"
    	        android:textColor="@color/Red"
    	        android:textSize="20sp" />

    	</RelativeLayout>
	
	<View
             android:layout_width="fill_parent"
             android:layout_height="1dp"
             android:layout_margin="5dp"
             android:background="@color/Brown"/>
	    
	    <ListView
	        android:id="@+id/listAdvMain"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:divider="@android:color/transparent"
	        android:dividerHeight="10.0sp"
	        android:layout_weight="1" >
	    </ListView>
	    
	</LinearLayout>

</FrameLayout>